class Solution {
    public boolean searchMatrix(int[][] matrix, int target) {
        int n1=matrix.length,n2=matrix[0].length;
        int row=0,column=n2-1;
        while(row<n1 && column >=0){
            if(matrix[row][column]==target){
                return true;
            }else if (matrix[row][column]<target){
                row++;
            }else{
                column--;
            }
        }
        return false;
    }
}
