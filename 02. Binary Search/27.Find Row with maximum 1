class Solution {
    public int rowWithMax1s(int[][] mat) {
       int n = mat.length;
       int m = mat[0]. length;

        int count =0;
        int index=-1;

       for(int i=0; i< n;i++){
       
        int lb=lowerbound (mat[i], m);
        int maxones =(lb==m)? 0 :(m- lb);

        if(maxones > count){
            count = maxones;
            index = i;
        }
       }
       return index;
    }


    public int lowerbound(int nums[] , int k){
        int low=0, high= k-1;
        int ans= k;
        while(low<= high){
            int mid = (low+ high)/2;

            if(nums[mid]>=1){
                high= mid-1;
                ans= mid;
            }else{
                low= mid+1;
            }
        }
        return ans;
    }
}
