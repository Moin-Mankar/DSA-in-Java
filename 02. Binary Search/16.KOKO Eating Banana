class Solution {
    public int minEatingSpeed(int[] piles, int h) {
        int low = 1, high = Arrays.stream(piles).max().getAsInt();
        int ans= Arrays.stream(piles).max().getAsInt();
        while(low<=high){
            int mid= (low+ high)/2;
            long total = totalHour(piles, mid);
            if(total<=h){
                ans=mid;
                high= mid-1;
            }else{
                low= mid+1;
            }
        }
        return ans;
    }


    public int totalHour(int[] piles, int h){
        int totalhr=0;
        for(int banana : piles){
            totalhr+= (int)Math.ceil((double)banana /h);
        }
        return totalhr;
    }
}
