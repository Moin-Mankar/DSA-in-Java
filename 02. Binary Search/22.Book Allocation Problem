class Solution {
    public int findPages(int[] nums, int m) {
        int sum =0, max=0;
        for(int n : nums){
            sum += n;
            max= Math.max(n, max);
        }
        int low=max,high= sum,ans= -1;
        while(low<= high){
            int mid= (low+ high)/2;
            int students= totalpages(nums,mid);

            
            if(students<=m){
                high= mid-1;
                ans=mid;
            }else{
                low= mid+1;
            }
        }
        return ans;
    }

    public int totalpages(int[] nums, int k){
        int student=1, pages= 0;
        for(int i=0;i<nums.length;i++){
            if(pages + nums[i]<=k){
                pages+= nums[i];
            }else{
                student++;
                pages=nums[i];
            }
        }
        return student;
    }
}
