class Solution {

public int lowerbound(int[] nums,int x){
    int low =0, high = nums.length-1;
    int ans = nums.length;
    while(low<= high){
        int mid= (low+high)/2;
        if(nums[mid]>=x){
            ans = mid;
            high= mid-1;
        }else{
            low= mid+1;
        }
    }
    return ans;
}

public int upperbound(int[] nums,int x){
    int low =0, high = nums.length-1;
    int ans = nums.length;
    while(low<= high){
        int mid= (low+high)/2;
        if(nums[mid]>x){
            ans = mid;
            high= mid-1;
        }else{
            low= mid+1;
        }
    }
    return ans;
}
    
public int countOccurrences(int[] nums, int target) {
        int first= lowerbound(nums,target);
        if(first ==nums.length) return 0;
        int up=upperbound(nums,target);
        return up-first;
    }
}
