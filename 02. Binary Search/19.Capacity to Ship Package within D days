class Solution {
    public int shipWithinDays(int[] weights, int days) {
        int max= 0,sum =0;
        for(int n : weights){
            max=Math.max(n , max);
            sum+=n;
        }
        int low=max,high=sum,ans=0;
        while(low<=high){
            int mid=(low+high)/2;

            int totalday= totaldays(weights,mid);
            if(totalday<=days){
                ans=mid;
                high= mid-1;
            }else{
                low= mid+1;
            }
        }
        return ans;
    }


    public int totaldays(int[] nums,int n){
        int days=1;
        int sum=0;
        for(int h: nums){
            sum+=h;

            if(sum>n){
                days++;
                sum=h;
            }
        }
        return days;
    }
}
