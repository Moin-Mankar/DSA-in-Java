class Solution {
    public int[] rearrangeArray(int[] nums) {
        int[] output = new int[nums.length];
        int positiveIndex=0, negativeIndex=1;

        for(int i=0; i<nums.length; i++){
            if(nums[i]>0){
                output[positiveIndex]= nums[i];
                positiveIndex +=2;
            }else{
                output[negativeIndex]= nums[i];
                negativeIndex+=2;
            }
        }
        return output;
    }
}
