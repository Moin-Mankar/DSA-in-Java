class Solution {
    public int findAllSubarraysWithGivenSum(int[] arr, int k) {
        Map<Integer, Integer> mpp = new HashMap<>();
        mpp.put(0, 1); 

        int preSum = 0;
        int cnt = 0;

        for (int i = 0; i < arr.length; i++) {
            preSum += arr[i]; 

            int remove = preSum - k;

           
            if (mpp.containsKey(remove)) {
                cnt += mpp.get(remove);
            }

            
            mpp.put(preSum, mpp.getOrDefault(preSum, 0) + 1);
        }

        return cnt;
    }
}
