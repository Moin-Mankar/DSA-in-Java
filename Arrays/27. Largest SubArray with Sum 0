class Solution {
    public int maxLen(int[] arr) {
        Map<Integer, Integer> ans = new HashMap<>();
        int sum=0;
        int maxLen=0;

        for(int i=0;i<arr.length;i++){
          sum+= arr[i];

          if(sum==0){
            maxLen= Math.max(maxLen, i+1);
          }else if(ans.containsKey(sum)){
            maxLen= Math.max(maxLen, i- ans.get(sum));
          }else{
            ans.put(sum, i);
          }
        }
        return maxLen;
    }
}
