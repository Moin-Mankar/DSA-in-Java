class Solution {

    public long numberOfInversions(int[] nums) {
        return mergeSort(nums, 0, nums.length - 1);
    }

    private long mergeSort(int[] nums, int l, int r) {
        if (l >= r) return 0;

        int mid = (l + r) / 2;
        long count = 0;

        count += mergeSort(nums, l, mid);
        count += mergeSort(nums, mid + 1, r);
        count += merge(nums, l, mid, r);

        return count;
    }

    private long merge(int[] nums, int l, int mid, int r) {

        int n1 = mid - l + 1;
        int n2 = r - mid;

        int[] left = new int[n1];
        int[] right = new int[n2];

        for (int i = 0; i < n1; i++) left[i] = nums[l + i];
        for (int j = 0; j < n2; j++) right[j] = nums[mid + 1 + j];

        int i = 0, j = 0, k = l;
        long inversions = 0;

        while (i < n1 && j < n2) {
            if (left[i] <= right[j]) {
                nums[k++] = left[i++];
            } else {
                nums[k++] = right[j++];
                inversions += (n1 - i); 
            }
        }

        while (i < n1) nums[k++] = left[i++];
        while (j < n2) nums[k++] = right[j++];

        return inversions;
    }
}
