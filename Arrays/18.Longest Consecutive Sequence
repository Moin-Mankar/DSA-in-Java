class Solution {
    public int longestConsecutive(int[] nums) {
        Arrays.sort(nums);
        int n = nums.length;
        int last= Integer.MIN_VALUE;
        int count=0;
        int largest=1;

        for(int i=0;i< n;i++){
            if(nums[i]-1 == last){
                count++;
                last=nums[i];
            }else if(nums[i] !=last){
                count=1;
                last=nums[i];
            }
            largest = Math.max(largest, count);
        }
        return largest;
    }
}
