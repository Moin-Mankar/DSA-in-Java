class Solution {
    public void rotate(int[][] matrix) {
        int n= matrix.length;
        for(int i=0;i<n;i++){
            for(int j=i+1;j<n;j++){
                int temp = matrix[i][j];
                matrix[i][j]=matrix[j][i];
                matrix[j][i]= temp;
            }
        }

        for(int i=0;i<n;i++){
            reverse(matrix[i]);
        }
        
    }

    public void reverse(int[] nums){
        int left=0,right=nums.length-1;
        while(left<right){
            int temp = nums[left];
            nums[left]= nums[right];
            nums[right]= temp;
            left++;
            right--;
        }
    }
}
